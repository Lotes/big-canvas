<!DOCTYPE html>
<html>
<head>
    <title>big-canvas - <%= siteId %></title>
    <!-- jquery -->
    <script type="text/javascript" src="/jquery.min.js"></script>
    <!-- knockback -->
    <script type="text/javascript" src="/knockback.min.js"></script>
    <!-- big-canvas -->
    <script type="text/javascript">
        var siteId = "<%= siteId %>";
    </script>
    <script type="text/javascript" src="/big-canvas.js"></script>
    <link type="text/css" rel="stylesheet" href="/big-canvas.css"/>

    <script>
        $(function() {
            $(".flip-button").click(function(){
                $(".comment-region").toggleClass("flip");
            });

            $(".demo").click(function(){
                $(this).toggleClass("flip");
            });
        });
    </script>
</head>
<body>
<div class="comment-region flip-panel">
    <div class="annotation-panel front">
        <div>
            Comments
        </div>
        <div id="annotations" data-bind="with: annotations">
            <ul class="pagination">
                <li data-bind="enable: hasPrevious, click: first"><a href="#">&laquo;</a></li>
                <li data-bind="enable: hasPrevious, click: previous"><a href="#">&lsaquo;</a></li>
                <!-- ko foreach: totalPages -->
                <li>
                    <a data-bind="click: pageClick, text: page, css: { active: selected }" href="#"></a>
                </li>
                <!-- /ko -->
                <li data-bind="enable: hasPrevious, click: next"><a href="#">&rsaquo;</a></li>
                <li data-bind="enable: hasNext, click: last"><a href="#">&raquo;</a></li>
            </ul>
            <!-- ko foreach: paginated -->
            <div>
                <strong data-bind="text: author().name">Author</strong>:
                <span data-bind="text: title"></span>
                (<span data-bind="text: createdAtFormatted"></span>)
            </div>
            <!-- /ko -->
            <button class="flip-button">flip</button>
        </div>
    </div>
    <div class="post-panel back">
        <button class="flip-button">flip</button>
    </div>
</div>

<div class="demo flip-panel" style="width: 100px; height: 100px">
    <div class="front" style="background-color: red"></div>
    <div class="back" style="background-color: blue"></div>
</div>
