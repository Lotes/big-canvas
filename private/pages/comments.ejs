<div id="comments-region" class="ui-layout-east flip-frame">
    <div id="annotations-panel" class="comments-panel flip-panel">
        <div id="annotations" data-bind="with: annotations">
            <button style="float: right">New</button>
            <h2>Comments</h2>
            <ul class="pagination">
                <li data-bind="enable: hasPrevious, click: first"><a href="#">&laquo;</a></li>
                <li data-bind="enable: hasPrevious, click: previous"><a href="#">&lsaquo;</a></li>
                <!-- ko foreach: totalPages -->
                <li data-bind="css: { active: selected }">
                    <a data-bind="click: pageClick, text: page" href="#"></a>
                </li>
                <!-- /ko -->
                <li data-bind="enable: hasPrevious, click: next"><a href="#">&rsaquo;</a></li>
                <li data-bind="enable: hasNext, click: last"><a href="#">&raquo;</a></li>
            </ul>
            <div class="scrollBox">
                <!-- ko foreach: paginated -->
                <div class="annotation-item">
                    <a class="user-image" href="#" data-bind="click: authorClick"><img src="/avatar.jpg" width="32" height="32"></a>
                    <div class="annotation-details">
                        <a class="title-field" href="#" data-bind="text: title, click: annotationClick"></a><br/>
                        by <a class="author-field" data-bind="text: author().name, click: authorClick" href="#">Author</a>,
                        <span class="created-at-field" data-bind="text: createdAtFormatted"></span>,
                        <span data-bind="text: postsCount"></span> posts
                    </div>
                </div>
                <!-- /ko -->
            </div>
            <button class="flip-button" data-bind="click: $root.gotoRandom">flip</button>
        </div>
    </div>
    <div id="create-annotation-panel" class="comments-panel flip-panel">
        <h2>Create annotation</h2>
        <button class="flip-button" data-bind="click: $root.gotoRandom">flip</button>
        <textarea id="tinyeditor" data-bind="value: postContent"></textarea>
        <button data-bind="click: alertContent">content?</button>
    </div>
